{{> nav}}
<div class="container">
    <h1 class="text-center">Lista de productos</h1><br>
    {{#if productsExist}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
                {{#each productos}}
                    <tr>
                        <th scope="row">{{this.id}}</th>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src={{this.thumbnail}} alt={{this.title}} width="30" height="30"></td>
                    </tr>
                {{/each}}
        </tbody>
    </table>

    {{else}}
        <div class="container bg-warning p-3 rounded-3">
            <h2>No hay productos</h2>
        </div>
    {{/if}}
</div>